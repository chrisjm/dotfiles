[init]
	defaultBranch = main

# Include local file that shouldn't be replicated between servers
[include]
  path = ~/.gitconfig.local

[commit]
	verbose = true

[diff]
  colorMoved = default

[push]
	default = simple
	autoSetupRemote = true

[pull]
	rebase = false
	ff = only

